---
import { Icon } from "astro-icon/components";

interface Props {
  label: string;
  icon: string;
  disabled?: boolean;
}

const { label, icon, disabled = false } = Astro.props;
---

<button
  class="not-disabled:text-sand-11 hover:not-disabled:text-sand-12 items-center justify-center rounded-md bg-transparent py-2 text-gray-900 transition-all duration-300 ease-in-out not-disabled:cursor-pointer disabled:opacity-15"
  type="button"
  disabled={disabled}
  aria-label={label}
  aria-pressed="false"
>
  <Icon name={icon} class="h-5 w-5" />
  <span class="sr-only">{label}</span>
</button>
