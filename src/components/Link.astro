---
interface Props {
  to: string;
  label: string;
}

const { to, label } = Astro.props;
---

<!-- ontouchstart fixes the issue of missing :active state on Safari -->
<a
  ontouchstart=""
  href={to}
  class="group relative no-underline hover:no-underline active:no-underline focus:no-underline before:content-[''] before:absolute before:inset-[-8px] before:rounded-md md:before:hidden before:bg-sand-4 dark:before:bg-sand-5 before:z-10 before:opacity-0 active:before:opacity-100"
>
  <span
    class="relative z-20 text-sand-11 group-hover:text-sand-12 group-active:text-sand-12 group-focus:text-sand-12 duration-300 ease-in-out"
    >{label}</span
  >
</a>
